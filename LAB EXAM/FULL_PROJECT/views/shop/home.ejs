        </div>
      </div>
      <!--/.Second slide-->


      <div class="carousel-item">
        <div class="container">
          <div class="row">
            <div class="col-md-3">
              <img src="https://pk.sapphireonline.pk/cdn/shop/files/2STSTW24V422_2.jpg?v=1728528980&width=600" class="d-block w-100" alt="Image 4">
