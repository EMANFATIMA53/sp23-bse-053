<!DOCTYPE html>
<html lang="en">
<head>
  <title>Manage Carousel</title>
</head>
<body>
  <h1>Manage Carousel Images</h1>

  <!-- Existing Carousel Images -->
  <div>
    <% carousels.forEach((carousel) => { %>
      <div>
        <img src="<%= carousel.image %>" alt="Carousel Image" width="200">
        <form action="/admin/carousels" method="POST" enctype="multipart/form-data">
          <input type="hidden" name="id" value="<%= carousel._id %>">
          <input type="file" name="image" required>
          <button type="submit">Update Image</button>
        </form>
      </div>
    <% }) %>
  </div>
</body>
</html>
